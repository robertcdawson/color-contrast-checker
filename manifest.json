{
  "name": "Color Contrast Picker",
  "description": "Check color contrast for any two elements on the page.",
  "version": "1.0.2",
  "manifest_version": 3,
  "action": {
    "default_title": "Color Contrast Picker",
    "default_icon": "img/icon128.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs"
  ]
}